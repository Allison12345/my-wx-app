<my-page>
  <view class="section">
    <textarea
      class="border"
      bindblur="onTextAreaBlur"
      auto-height
      placeholder="自动变高"
    ></textarea>
  </view>
  <view class="section">
    <textarea
      class="border"
      bindinput="onInput"
      placeholder-style="color:red"
      placeholder="字体颜色"
    ></textarea>
  </view>
  <view class="section">
    <textarea
      class="border"
      focus="{{ focus }}"
      placeholder="这个只有在按钮点击的时候才聚焦"
    ></textarea>
    <button bindtap="onTap">聚焦</button>
  </view>
  <view class="section">
    <form bindsubmit="onFormSubmit">
      <textarea class="border" placeholder="form 中的 textarea"></textarea>
      <button form-type="submit">提交</button>
    </form>
  </view>
</my-page>
