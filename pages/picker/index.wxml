<my-page>
  <view>
    <picker
      class="my-picker"
      bindchange="onPickerChange"
      value="{{ index }}"
      range="{{ singleArray }}"
    >
      <view class="picker">
        普通选择器(当前选择)：{{ singleArray[index] }}
      </view></picker
    >
  </view>
  <view>
    <picker
      class="my-picker"
      mode="multiSelector"
      bindchange="bindMultiPickerChange"
      bindcolumnchange="bindMultiPickerColumnChange"
      value="{{ multiIndex }}"
      range="{{ multiArray }}"
    >
      <view class="picker">
        当前选择：{{ multiArray[0][multiIndex[0]] }}，{{
          multiArray[1][multiIndex[1]]
        }}，{{ multiArray[2][multiIndex[2]] }}
      </view></picker
    >
  </view>
</my-page>
