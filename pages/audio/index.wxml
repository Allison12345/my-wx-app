<my-page>
  <audio
    name="{{ name }}"
    author="{{ author }}"
    src="{{ src }}"
    id="myAudio"
    controls
    loop
  ></audio>
  <button type="default" bindtap="audioPlay">播放</button>
  <button type="default" bindtap="audioPause">暂停</button>
  <button type="default" bindtap="audio14">设置当前播放时间为14秒</button>
  <button type="default" bindtap="audioStart">回到开头</button>
</my-page>
